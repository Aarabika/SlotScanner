<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/camera"
    tools:context="com.google.android.gms.samples.vision.barcodereader.BarcodeCaptureActivity">

  <com.google.android.gms.samples.vision.barcodereader.ui.camera.CameraSourcePreview
      android:id="@+id/preview"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent">

    <com.google.android.gms.samples.vision.barcodereader.ui.camera.GraphicOverlay
        android:id="@+id/graphicOverlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

  </com.google.android.gms.samples.vision.barcodereader.ui.camera.CameraSourcePreview>

  <Button android:id="@+id/use_flash"
          android:background="@drawable/flash_normal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="10dp"
          android:layout_marginEnd="350dp"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="530dp"
          android:onClick="ChangeFlash"

      />

</RelativeLayout>
